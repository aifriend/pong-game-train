# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf
*.pyw text eol=lf

# Jupyter notebooks
*.ipynb text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Model weights (Git LFS if needed)
*.pth filter=lfs diff=lfs merge=lfs -text
*.pt filter=lfs diff=lfs merge=lfs -text
*.h5 filter=lfs diff=lfs merge=lfs -text
*.pkl filter=lfs diff=lfs merge=lfs -text

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary

# Audio
*.ogg binary
*.wav binary
*.mp3 binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Archives
*.zip binary
*.tar binary
*.gz binary

# Export diff and merge for Jupyter notebooks
*.ipynb diff=jupyternotebook
*.ipynb merge=jupyternotebook

# Linguist language overrides (for GitHub)
*.md linguist-detectable
*.py linguist-detectable
docs/* linguist-documentation
tests/* linguist-vendored=false

